{
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx .claude/hooks/notifications/handler.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx .claude/hooks/activity-tracker.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx .claude/hooks/notifications/handler.ts"
          }
        ]
      }
    ]
  },
  "env": {
    "VOICE_PACK": "alfred",
    "DISCORD_ENABLED": "false",
    "DISCORD_WEBHOOK_URL": "",
    "DISCORD_USERNAME": "Claude Code",
    "DISCORD_AVATAR_URL": "",
    "EMAIL_ENABLED": "true",
    "EMAIL_FROM": "",
    "EMAIL_TO": "",
    "EMAIL_SMTP_HOST": "smtp.gmail.com",
    "EMAIL_SMTP_PORT": "587",
    "EMAIL_SMTP_USER": "",
    "EMAIL_SMTP_PASS": "",
    "TELEGRAM_ENABLED": "true",
    "TELEGRAM_BOT_TOKEN": "",
    "TELEGRAM_CHAT_ID": ""
  }
}